div(id='form-container', class='container')
  form(action="/user", id="register-form", name="register-form", method="post", class="well form-horizontal", style="display: block;")
    fieldset
      legend Create an account
      
      div.control-group
        div.control-group
          label(for="name", class="control-label") Name
          
          div.controls
            input(type="text", name="name", placeholder="Enter your name", id="name", class="span3")
            
        div.control-group
          label(for="email", class="control-label") Email
          
          div.controls
            input(type="text", name="email", placeholder="Enter your email", id="email", class="span3")
        
        div.control-group
          label(for="password", class="control-label") Password
          
          div.controls
            input(type="password", name="password", placeholder="Enter your password", id="password", class="span3")
            
        div.control-group
          label.control-label
          
          div.control-group
            input(type="submit", name="submit", value="Sign Up", id="submit", class="btn")
            a(href="#user/login", style="margin-left: 20px", id="login-link") Already registered? Login
            
            
            
  form(style="display: none; margin-top: 20px;", action="/user/login", id="login-form", name="login-form", method="post", class="well form-horizontal")
    fieldset
      legend Login
      
      div.control-group
        div.control-group
          label(for="email", class="control-label") Email
          
          div.controls
            input(type="text", name="email", placeholder="Enter your email", id="login-email", class="span3")
        
        div.control-group
          label(for="password", class="control-label") Password
          
          div.controls
            input(type="password", name="password", value="", placeholder="Enter your password", id="login-password", class="span3")

            
        div(style="margin-bottom: 0px", class="control-group")
          label.control-label
          
          div.control-group
            input(type="submit", name="submit", value="Login", id="login-submit", class="btn") 

        div(style="margin-bottom: 0px", class="control-group")
          label.control-label
          
          div.control-group
            a(href="#user/register", id="register-link") Register   


        div.control-group
          label.control-label
          
